
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @cocktail.photo %>');">
        <div class="banner-content">
          <h2><%=@cocktail.name%></h2>

        </div>
      </div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %> |
          <%= dose.ingredient.name %> |
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </li>
        <% end %>
      </ul>
      <div>
        <%= link_to new_cocktail_dose_path(@cocktail) do %>
          <i class="fa fa-plus">Add a dose</i>
        <% end %>
        <%= link_to cocktails_path do %>
          <i class="fa fa-undo">Back to list</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

